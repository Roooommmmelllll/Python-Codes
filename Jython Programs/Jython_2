def pickSound():
  myFile = pickAFile()
  mySound = makeSound(myFile)
  return mySound
  
def increaseVol(mySound):
  for sample in getSamples(mySound):
    value = getSampleValue(sample)
    setSampleValue(sample, value*2)
    
def decreaseVol(mySound):
  for sample in getSamples(mySound):
    value = getSampleValue(sample)
    setSampleValue(sample, value*.5)

def changeVolume(mySound):
  printNow("Enter + to increase the volume. Enter - to decrease the volume.")
  ask = raw_input("Enter anything else to exit!")
  if ask == "+":
    increaseVol(mySound)
  elif ask == "-":
    decreaseVol(mySound)
  else:
    return

